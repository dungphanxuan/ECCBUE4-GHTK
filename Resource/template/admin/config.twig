{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}Giao Hang Tiet Kiem{% endblock %}
{% block sub_title %}Danh Sách Plugin{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block stylesheet %}{% endblock stylesheet %}

{% block javascript %}{% endblock javascript %}

{% block main %}
    <form role="form" method="post">

        {{ form_widget(form._token) }}

        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>Cài Đặt</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3">
                                    <span>Tên tiện ích</span>
                                    <span class="badge badge-primary ml-1">Bắt buộc</span>
                                </div>
                                <div class="col mb-2">
                                    {{ form_widget(form.name) }}
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <span>Sandbox mode</span>
                                </div>
                                <div class="col mb-2">
                                    {{ form_widget(form.is_sandbox) }}
                                    {{ form_errors(form.is_sandbox) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <span>Token</span>
                                    <span class="badge badge-primary ml-1">Bắt buộc</span>
                                </div>
                                <div class="col mb-2">
                                    {{ form_widget(form.token) }}
                                    {{ form_errors(form.token) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <span>Webhook hash</span>
                                    <span class="badge badge-primary ml-1">Bắt buộc</span>
                                </div>
                                <div class="col mb-2">
                                    {{ form_widget(form.webhook_hash) }}
                                    {{ form_errors(form.webhook_hash) }}
                                    <div>Webhook URL: {{ url('ghtk_admin_webhook')}}?hash=HASH_VALUE </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-baseLink"
                               href="{{ url('admin_store_plugin') }}">
                                <i class="fa fa-backward" aria-hidden="true"></i>
                                <span>Danh Sách Plugin</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5"
                                        type="submit">Đăng Ký</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
